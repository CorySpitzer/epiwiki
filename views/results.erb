<%if @result.articles.present? %>
  <h1>Articles with the <%= @result.topic %> tag:</h1>
  <% @result.articles.each do |article| %>
  <ul>
    <li> <h2 class= "transparent"><a href = "/articles/<%= article.id %>"><%= article.name %></a></h></li>
  </ul>
  <% end %>
<%else%>
  <h1>You currently have no articles with this tag.</h1>
<%end%>
